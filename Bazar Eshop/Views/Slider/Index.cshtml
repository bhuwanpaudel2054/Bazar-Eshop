@{
    Layout = "_Layout1";
}

    <div class="row">
        <div class="m-2">
            <a class="btn btn-outline-info float-right" asp-controller="Slider" asp-action="AddSlider">Add Slide</a>
        </div>
        <div class="SliderList">

            @if (ViewBag.SliderList != null)
            {
                @foreach (var item in ViewBag.SliderList)
                {
                    var photoPath = "~/images/" + (item.PhotoPath ?? "fas.jpg");
                    <ul class="cart_list">

                        <li class="cart_item clearfix">


                            <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                <div class="cart_item_name cart_info_col">
                                    <div class="cart_item_image img-thumbnail"><img src="@photoPath" alt="" asp-append-version="true"></div>
                                </div>

                                <div class="cart_item_price cart_info_col">
                                    <div class="cart_item_title">Status</div>
                                    <div class="cart_item_text">@(item.Status ? "Show" : "Hide")</div>
                                </div>

                                <div class="cart_item_price cart_info_col">
                                    <div class="cart_item_title">Ception</div>
                                    <div class="cart_item_text">@item.Caption</div>
                                </div>

                                <div class="cart_item_quantity cart_info_col">
                                    <a class=" btn btn-warning " asp-controller="Slider" asp-action="EditSlider" asp-route-id="@item.Id">Edit</a>
                                    <a class=" btn btn-danger " asp-controller="Slider" asp-action="RemoveSlider" asp-route-id="@item.Id">Delete</a>
                                </div>
                            </div>
                        </li>


                    </ul>
                }
            }
            else
            {
                <h3>No Slider Photo and caption Found</h3>
            }
        </div>





    </div>
