
@model Bazar_Eshop.ViewModels.EditSliderViewModel

@{
    Layout = "_Layout1";
}

@{
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "111.jpg");
}


<div class="container">
    <div class="UploadField">

        <form enctype="multipart/form-data" method="post" class="mt-3">
            <input hidden asp-for="Slider.Id" />
            <input hidden asp-for="ExistingPhotoPath" />
            <div class="form-group row">
                <img src="@photoPath"  class="img img-thumbnail" asp-append-version="true"/>
            </div>


            <div class="form-group row">
                <label  class="col-sm-2 col-form-label">Change Slider Photo</label>
                <div class="custom-file col-sm-10">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File......</label>
                    <span asp-validation-for="Photo" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Slider.Caption" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Slider.Caption" class="form-control">
                    <span asp-validation-for="Slider.Caption" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-check">
                    <label>
                        <input type="checkbox" asp-for="Slider.Status" /> Status
                    </label>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary m-2">Create</button>

                </div>
            </div>

            @section Scripts{
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        })
                    });</script>


            }
        </form>
    </div>
</div>