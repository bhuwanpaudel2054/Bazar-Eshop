@{
    Layout = "_Layout1";
}
@model IEnumerable<IdentityRole>
    <div class="row">
        <div  class="col-6">
            <h1>Roles</h1>
        </div>
        <div class="col-6  m-auto">
            <a class="btn btn-primary" asp-controller="administration" asp-action="createrole">
               Create Role
            </a>
            </div>
    </div>

    @if (Model.Any())
    {<div class="card">
            @foreach (var role in Model)
            {
                <div class="card-header">Role ID: @role.Id</div>
                <div class="card-body">Role Name: @role.Name </div>
                <div class="card-footer">
                    <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                        <a class="btn btn-warning " asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            }

        </div>
    }
    else
    {
        <a class="btn btn-primary" style="width:auto"
           asp-controller="administration" asp-action="CreateRole">
            Create Role
        </a>
    }