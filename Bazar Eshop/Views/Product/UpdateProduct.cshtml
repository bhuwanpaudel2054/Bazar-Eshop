@{
    Layout = "_Layout1";
}

@model Bazar_Eshop.ViewModels.UpdateProductViewModel

@{
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "111.jpg");
}


    <h1><center>  Edit Product </center></h1>


    <form enctype="multipart/form-data" method="post" class="mt-3">
        <input hidden asp-for="Product.Id" />
        <input hidden asp-for="ExistingPhotoPath" />

        <div class="form-group row">
            <label asp-for="Product.Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Product.Name" class="form-control">
                <span asp-validation-for="Product.Name" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Product.Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Product.Description" class="form-control">
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Product.Details" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Product.Details" class="form-control">
                <span asp-validation-for="Product.Details" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Product.Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Product.Price" class="form-control">
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Product.Quantity" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Product.Quantity" class="form-control">
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-check">
                <label>
                    <input type="checkbox" asp-for="Product.Status" /> Status
                </label>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="Product.Category"></label>
            <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-control">
            </select>
        </div>
        <div class="custom-file">
            <input asp-for="Photo" class="form-control custom-file-input">
            <label class="custom-file-label">Choose File......</label>
            <span asp-validation-for="Photo" class="text-danger"></span>

        </div>
        <div class="form-group row col-sm-4 offset-4">
            <img src="@photoPath" class="img-thumbnail" width="252" height="300" asp-append-version="true" />
        </div>


        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary m-2">Update</button>

            </div>
        </div>
        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    })
                });</script>


        }

    </form>

