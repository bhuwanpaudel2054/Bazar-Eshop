<div class="container">
    <p>
        <h5>
            <a asp-action="SubCategoryList" asp-controller="Category" asp-route-id="@ViewBag.ParentName.Id">@ViewBag.ParentName.Name </a>
            > @ViewBag.categoryName.Name
            <hr />
        </h5>
    </p>

    <div class="card-deck ">

        @foreach (var productListInSubCategory in Model)
        {
            var photoPath = "~/images/" + (productListInSubCategory.PhotoPath ?? "fas.jpg");

            <div class="card mr-auto ml-auto" style="min-width :18rem; max-width:20.5%;">
                <a asp-action="ProductDetails" asp-controller="Product" asp-route-id="@productListInSubCategory.Id">
                    <img class="card-img-top" src="@photoPath"
                         height="252" width="300" asp-append-version="true">
                </a>
                <div class="card-body">
                    <h4 class="card-title">@productListInSubCategory.Name</h4>
                    <p class="card-text">
                        $ @productListInSubCategory.Price
                    </p>
                        <a class="btn btn-outline-info" asp-action="Buy" asp-controller="Cart" asp-route-id="@productListInSubCategory.Id">Add cart <i class="fa fa-cart-plus" aria-hidden="true"></i></a>
                        <a class="btn btn-outline-info m-2" asp-action="ProductDetails" asp-controller="Product" asp-route-id="@productListInSubCategory.Id"> Details </a>
                    
                </div>
            </div>

        }

    </div>
</div>

