@model RegisterViewModel

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 pb-2 m-2" style="border-radius:10px ; background-color:antiquewhite;" id="form">
            <form enctype="multipart/form-data" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <h1 class="text-center">Registration Form</h1>
                <br /><br />
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-group col-md-5">
                        <label asp-for="FirstName">First Name</label>
                        <input class="form-control" asp-for="FirstName" placeholder="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="LastName">Last Name</label>
                        <input class="form-control" asp-for="LastName" placeholder="LastName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <div class="col-md-1"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-group col-md-10">
                        <label asp-for="Email">Email</label>
                        <input class="form-control" asp-for="Email" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-group col-md-10">
                        <label asp-for="Gender" class="col-form-label"></label>
                        <div>
                            <select asp-for="Gender" class="custom-select mr-sm-2"
                                    asp-items="Html.GetEnumSelectList<Gend>()"></select>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-group col-md-10">
                        <label asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber" placeholder="PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-group col-md-10">
                        <label asp-for="City"></label>
                        <input class="form-control" asp-for="City" placeholder="City" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-group col-md-10">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" placeholder="*****" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-group col-md-10">
                        <label asp-for="ConfirmPassword"></label>
                        <input class="form-control" asp-for="ConfirmPassword" placeholder="******" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="form-control-file col-md-10 ">
                        <input asp-for="Photo" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File......</label>
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <br />
                <button type="submit" class="btn btn-primary offset-1">Register</button>
                <a asp-controller="Account" asp-action="Login">Already Have Account</a>
                @section Scripts{
                    <script>
                        $(document).ready(function () {
                            $('.custom-file-input').on("change", function () {
                                var fileName = $(this).val().split("\\").pop();
                                $(this).next('.custom-file-label').html(fileName);
                            })
                        });</script>


                }
            </form>

        </div>
    </div>
</div>